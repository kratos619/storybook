<div class="row">
    <div class="col s12 m9">
        <h3>{{story.title}}</h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</span>
                {{{story.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m3">
        <div class="card center-align hoverable">
            <div class="card-content">
                <span class="card-title">{{story.user.firstname}} {{story.user.lastname}}</span>
                <img src="{{story.user.image}}" class="center-align circle responsive-img" alt="Userimage">
            </div>
            <div class="card-action text-center">
                <a href="/stories/user/{{story.user.id}}">Read All from {{story.user.firstname}}</a>
            </div>
        </div>

    </div>
</div>