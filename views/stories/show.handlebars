<div class="row">
    <div class="col s12 m9">
        <h3>{{story.title}}</h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</span>
                {{{story.body}}}
            </div>
        </div>

        <hr>
        <h4>Comments..</h4>
        {{#if story.allowComments}}
        <div class="row">
            <div class="col s12 m9">
                {{#each story.comments}}
                <div class="card-panel grey lighten-5 z-depth-1">
                    <div class="row valign-wrapper">
                        <div class="col s2">
                            <img src="{{commentUser.image}}" alt="" class="circle responsive-img">
                            <!-- notice the "circle" class -->
                        </div>
                        <div class="col s10">
                            <span class="black-text">
                                {{commentBody}}
                            </span>
                        </div>

                    </div>
                    <p class="color:#9e9e9e">{{commentUser.firstname}} {{commentUser.lastname}}</p>
                </div>
                {{/each}}
                <div class="card">
                    <div class="card-content">
                        {{#if user}}
                        <form action="/stories/comment/{{story.id}}" method="POST">
                            <div class="row">
                                <div class="input-field col s12">
                                    <textarea name="commentBody" id="textarea1" class="materialize-textarea"></textarea>
                                    <label for="textarea1">Leave Comment...</label>
                                </div>

                                <button type="submit" class="btn waves-effect waves-light" type="submit" name="action">Submit
                                    <i class="fa fa-send" aria-hidden="true"></i>
                                </button>
                            </div>
                        </form>
                        {{else}}
                        <p><a href="/auth/google">Please Login To Comment</a></p>
                        {{/if}}


                    </div>
                </div>
            </div>
        </div>

        {{/if}}

    </div>
    <div class="col s12 m3">
        <div class="card center-align hoverable">
            <div class="card-content">
                <span class="card-title">{{story.user.firstname}} {{story.user.lastname}}</span>
                <img src="{{story.user.image}}" class="center-align circle responsive-img" alt="Userimage">
            </div>
            <div class="card-action text-center">
                <a href="/stories/user/{{story.user.id}}">Read All from {{story.user.firstname}}</a>
            </div>
        </div>

    </div>
</div>