<h1>Public stories</h1>

<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="hoverable card">
            <div class="card-image">
                <a href="/stories/{{id}}" class="btn-floating halfway-fab waves-effect waves-light red">
                    <i class="fa fa-pencil-square" aria-hidden="true"></i>
                </a>
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p class="story-text">{{{ truncate body 150}}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="Contact Person">
                    {{user.firstname}} {{user.lastname}}
                </div>
            </div>
            <div class="card-action center-align">
                <a class="btn-gray" href="/stories/show/{{id}}"> <i class="fa fa-book" aria-hidden="true"></i> View</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No stories Found</p>
    {{/each}}
</div>